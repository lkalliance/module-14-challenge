{{#if userInfo.edit}}
<h2>Edit this post</h2>
{{else}}
<h2>Create a new post</h2>
{{/if}}

<form id="new-post">
    <label for="title">Post title</label>
    <input type="text" id="title"{{#if userInfo.edit}} value="{{post.title}}"{{/if}} />
    <label for="content">Post content</label>
    <textarea id="content" width="600" height="1200">{{#if userInfo.edit}}{{post.content}}{{/if}}</textarea>
    {{#if userInfo.edit}}
    <button id="editPostBtn" class="btn btn-primary btn-sm rounded-pill">SAVE</button>
    {{else}}
    <button id="addPostBtn" class="btn btn-primary btn-sm rounded-pill">POST</button>
    {{/if}}
</form>

{{#if userInfo.edit}}
<script src="/js/editpost.js"></script>
{{else}}
<script src="/js/newpost.js"></script>
{{/if}}
