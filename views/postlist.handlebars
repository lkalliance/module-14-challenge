{{#if userInfo.showUser}}
<h2>Posts by {{userInfo.showUser.username}}</h2>
{{else}}
<h2>All posts</h2>
{{/if}}
<div class="container">
    <ul class="row g-2 row-cols-1 row-cols-md-2 row-cols-lg-3">
        {{#each posts as |post|}}
            {{> post-details}}
        {{/each}}
    </ul>
</div>
{{#if userInfo.showUser}}
<a href="/posts">See all posts</a>
{{/if}}